http:
  routers:
    traefik-dashboard:
      rule: "Host(`dashboard.${DOMAIN}`)"
      entryPoints:
        - websecure
      service: api@internal
      middlewares:
        - dashboard-auth
        - dashboard-whitelist
      tls:
        certResolver: le

  middlewares:
    dashboard-auth:
      basicAuth:
        users:
          - "${DASHBOARD_USER}"
    dashboard-whitelist:
      ipWhiteList:
        sourceRange:
          - "${DASHBOARD_ACL_IP}"
